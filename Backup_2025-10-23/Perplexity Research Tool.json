      "name": "Perplexity API Request",
      "type": "n8n-nodes-base.httpRequest",
      "position": [
        320,
        300
      ],
      "parameters": {
        "method": "POST",
        "url": "https://api.perplexity.ai/chat/completions",
        "authentication": "genericCredentialType",
        "genericAuthType": "httpHeaderAuth",
        "sendHeaders": true,
        "headerParameters": {
          "parameters": [
            {
              "name": "Content-Type",
              "value": "application/json"
            }
          ]
        },
        "sendBody": true,
        "bodyContentType": "json",
        "jsonBody": "{\n  \"model\": \"llama-3.1-sonar-large-128k-online\",\n  \"messages\": [\n    {\n      \"role\": \"system\",\n      \"content\": \"You are a helpful research assistant. Provide comprehensive, accurate information with citations. Focus on recent developments and always include source URLs when available.\"\n    },\n    {\n      \"role\": \"user\",\n      \"content\": \"{{ $json.query || $json.search_terms || $json.topic }}\"\n    }\n  ],\n  \"max_tokens\": 4000,\n  \"temperature\": 0.2,\n  \"search_domain_filter\": [\"techcrunch.com\", \"venturebeat.com\", \"arstechnica.com\", \"mit.edu\", \"openai.com\", \"anthropic.com\", \"deepmind.com\"],\n  \"return_citations\": true,\n  \"search_recency_filter\": \"day\"\n}",
        "options": {
          "timeout": 60000,
          "retry": {
            "enabled": true,
            "maxTries": 3
          }
        }
      },
      "typeVersion": 4.2
    },
    {
      "id": "process-response",
      "name": "Process Perplexity Response",
      "type": "n8n-nodes-base.set",
      "position": [
        520,
        300
      ],
      "parameters": {
        "values": {
          "string": [
            {
              "name": "research_content",
              "value": "{{ $json.choices[0].message.content }}"
            },
            {
              "name": "model_used",
              "value": "{{ $json.model }}"
            },
            {
              "name": "usage_tokens",
              "value": "{{ $json.usage.total_tokens }}"
            },
            {
              "name": "research_timestamp",
              "value": "{{ $now }}"
            }
          ]
        }
      },
      "typeVersion": 3.4
